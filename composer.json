{
	"name": "citomni/infrastructure",
	"description": "Lean, cross-mode infrastructure for CitOmni apps: DB (LiteMySQLi), logging (LiteLog), text/i18n (LiteTxt), mail (PHPMailer), and optional contact routes.",
	"type": "library",
	"license": "MIT",
	"homepage": "https://github.com/citomni/infrastructure",
	"keywords": [
		"infrastructure", "cli", "php", "http", "captcha", "high-performance", "psr-4", "low-overhead", "deterministic", "php8", "citomni",  "citomni-framework",  "citomni-php", "green-by-design", "deterministic-config", "litemysqli", "phpmailer", "litelog", "litetxt", "i18n", "csrf", "framework"
	],
	"require": {
		"php": "^8.2",
		"citomni/kernel": "^1.0",
		"phpmailer/phpmailer": "^6.9",
		"larsgmortensen/litemysqli": "^1.0",
		"larsgmortensen/litelog": "^1.0",
		"larsgmortensen/litetxt": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"CitOmni\\Infrastructure\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"CitOmni\\Infrastructure\\Tests\\": "tests/"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "^11.0",
		"phpstan/phpstan": "^1.11"
	},
	"suggest": {
		"ext-gd": "Required for the optional /captcha route (image generation).",
		"ext-iconv": "Improves UTF-8 normalization in Mailer (fallbacks exist).",
		"ext-mbstring": "Alternative for UTF-8 normalization in Mailer (fallbacks exist).",
		"ext-opcache": "Better performance in production.",
		"citomni/http": "HTTP runtime (Router, Request, View, Security) if you use the provided routes.",
		"citomni/auth": "^1.0",
		"larsgmortensen/liteview": "Template rendering used by the HTTP View service."
	},
	"support": {
		"issues": "https://github.com/citomni/infrastructure/issues",
		"source": "https://github.com/citomni/infrastructure",
		"docs": "https://github.com/citomni/infrastructure#readme"
	},
	"authors": [
		{
			"name": "Lars Grove Mortensen",
			"homepage": "https://www.citomni.com"
		}
	],
	"config": {
		"sort-packages": true,
		"optimize-autoloader": true
	},
	"archive": {
		"exclude": [
			"/.github",
			"/docs",
			"/tests",
			"/dev",
			"/examples",
			"/vendor",
			"/.editorconfig",
			"/.gitattributes",
			"/.gitignore",
			"/phpunit.xml*",
			"/.idea",
			"/.vscode",
			"/Makefile"
		]
	}
}
